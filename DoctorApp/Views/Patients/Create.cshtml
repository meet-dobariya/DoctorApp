@model DoctorApp.Models.Patient

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="patient-form">
        <form asp-action="Create" id="createPatientForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control mt-2" style="width:20rem;" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" id="tableReload" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
@* <partial name="_PatientTable" /> *@
<div class="row">
    <div class="col-md-12">
        <button id="togglePartialView" class="btn btn-secondary">View history</button>
    </div>
</div>

<div id="partialViewContainer" class="mt-3" style="display: none;">
    <p>Total amount : @ViewData["amount"]</p>
    <partial name="_PatientTable" />
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script asp-src-include="~/js/Patient.js"></script>
        <script>
            $(document).ready(function () {
                $('#togglePartialView').click(function () {
                    $('#partialViewContainer').toggle();
                });
            });
        </script>
    }
}
